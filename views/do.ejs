		<hr>
		
		<div class="container" style = "margin-top: 40px;">

        	
        	<form id="myForm" onsubmit="return formValidate()" action="/stocks/<%=stock._id%>/do" method="POST">
	        	<div class= "row">
	        		<div class= "col-md-2 form-group">
	        			<label for="do[buyer]">Buyer Name</label>
	        			<input class="form-control" type="text" name="do[buyer]" placeholder = "Buyer Name" required>
	        		</div>
	        		<div class= "col-md-2 form-group">
	        			<label for="do[broker]">Broker Name</label>
	        			<input class="form-control" type="text" name="do[broker]" placeholder = "Broker Name" required>
	        		</div>
	        		<div class= "col-md-2 form-group">
	        			<label for="do[validity]">D/O Validity</label>
	        			<input class="form-control" type="text" name="do[validity]" placeholder = "Valid days" required>
	        		</div>
	        		<div class= "col-md-4 form-group">
	        			<label for="do[rate]">Rate</label>
	        			<input class="form-control" type="text" name="do[rate]" placeholder = "Rate per kgs/lbs/40kgs" required>
	        		</div>
	        		<div class= "col-md-2 form-group">
	        			<label for="do[modeOfPayment]">Mode of Payment</label>
	        			<input class="form-control" type="text" name="do[modeOfPayment]" placeholder = "Payment Days" required>
	        		</div>
	        		
		        </div>
		        
		        <div class="alert alert-danger" id="alertMsg" style="margin-bottom: 30px;">
	        		
				</div>
	        	
	        	<div class="row" style="margin-bottom: 30px;">
	        		<hr>
	        		<div class="col-md-12">
	        			<h4>How do you want to make delivery - order</h4>
	        		</div>
	        			
	        		<div class="col-md-12">	
					  <label class="radio-inline">
					  	<input  type="radio" name="do-type" value="oneDO" id="rdSelect" checked>One D/O
					  	
					  </label>
					  <label class="radio-inline">
					  	<input  type="radio" name="do-type" value="custom" id="rdSelect1">Custom Number of bags
					  	
					  </label>
					</div>

					  <div class="col-md-3" style="margin-top: 30px;">
					  	<label for="bags">Number of bags</label>
						<input id="oneDO" class="form-control" type="number" name="do[bag]" value="0" placeholder = "Number of Bags" >
					  </div>
	        		   
	        		  <div class="col-md-3" style="margin-top: 30px;">
					  	<label for="bags">Number of bags</label>
						<input id="customBags" class="form-control" type="text" name="do[bag]" placeholder = "Number of Bags" disabled>
					  </div> 	
	        	</div>
	        
	        		<input type="submit" class="btn btn-lg btn-primary">
		        	
		        	
	        </form>

	        
		  
        	
        	
        	
    </div>

	
	<!-- Latest compiled and minified JavaScript -->
	
	<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
	
	<script>
		$(document).ready(function(){
    			$('#alertMsg').fadeOut(100);
    			var radios = document.querySelectorAll('input[type=radio][name="do-type"]');
    			function changeHandler(event) {
				   if ( this.value === 'oneDO' ) {
				     $("#oneDO").prop('disabled', false);
				     $("#oneDO").val(0);
				     $("#customBags").prop('disabled', true);
				     $("#customBags").val('');
				   } else if ( this.value === 'custom' ) {
				      $("#oneDO").prop('disabled', true);
				      $("#oneDO").val('');
				     $("#customBags").prop('disabled', false);
				     $("#customBags").val(0);
				   } 
				}
			
				
				radios.forEach(function(radio) {
				   radio.addEventListener("change", changeHandler);
				});	


				$("#myForm").submit(function(){
						
						
						// conditions for oneDO
						if($("#rdSelect").is(':checked')){
							var x = $("#oneDO").val();

							if(!x || x == 0 || x== ""){
								$('#alertMsg').text('Packages cannot nill').fadeIn().fadeOut(2000);
								return false
							} else if(parseInt(x) > <%= stock.bpkgs %>){
								$('#alertMsg').text('Packages cannot be greater than balance packages').fadeIn().fadeOut(2000);
								return false
							} else {
								return true;
							}
						} 
							//custom do check
						if($("#rdSelect1").is(':checked')){
							
							var x = $('#customBags').val();
				        	var arr = x.split("+");
				        	var result =0;
				        	for(var i = 0; i < arr.length; i++){
				        		var y = arr[i].replace(/[^0-9.]/g, "");
				        		result += Math.floor(parseInt(y));

				        		if(i == arr.length-1){
				        			if(!x || isNaN(result) ){
										$('#alertMsg').text('Custom Packages cannot be nill').fadeIn().fadeOut(2000);
										return false
									} else if(result > <%= stock.bpkgs %>) {
										$('#alertMsg').text('Packages cannot be greater than balance packages').fadeIn().fadeOut(2000);
										return false
									}else if(result == 0){
										$('#alertMsg').text('Packages cannot be greater than balance packages').fadeIn().fadeOut(2000);
										return false
									} else {
										return true
									}
						        }
				        	}
							
				        	
				        	
				        	


						}
				});

    		});	
	</script>
	
