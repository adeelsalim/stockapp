<% include ./partials/header %>
	<div class="container">

        	<h1 class="text-center">Enter Warehouse</h1>
        	<br>
        	<form action="/warehouse/new" method="POST">
	        	<div class= "row">
	        		<div class= "col-md-2 form-group">
	        			<label for="warehouse[short]">* Short</label>
	        			<input class="form-control" type="text" name="warehouse[short]" placeholder="GB" required>
	        		</div>
	        		<div class= "col-md-2 form-group">
	        			<label for="warehouse[name]">* Name</label>
	        			<input class="form-control" type="text" name="warehouse[name]" placeholder="Name" required>
	        		</div>
	        		<div class= "col-md-2 form-group">
	        			<label for="warehouse[address]">Address</label>
	        			<input class="form-control" type="text" name="warehouse[address]" placeholder="Address">
	        		</div>
	        		<div class= "col-md-2 form-group">
	        			<label for="warehouse[keeper]">Godown Keeper</label>
	        			<input class="form-control" type="text" name="warehouse[keeper]" placeholder="Naveed">
	        		</div>
	        		<div class= "col-md-2 form-group">
	        			<label for="warehouse[number]">Godown Keeper</label>
	        			<input class="form-control" type="number" name="warehouse[number]" placeholder="03001234567">
	        		</div>
	        		
	        		
		        </div>
	        	
	        
		        	<input type="submit" class="btn btn-lg btn-primary">
	        </form>
        	
    </div>
    
    <hr>
    
    <div class="container">
        		<h1 class="text-center">Warehouses</h1>
		    <table class="table table-striped table-bordered table-hover">
		        <thead>
				    <tr>
				      
				      <th style="width: 5%">SHORT</th>
				      <th style="width: 25%">NAME</th>
				      <th style="width: 25%">ADDRESS</th>
				      <th style="width: 20%">KEEPER</th>
				      <th style="width: 15%">NUMBER</th>
				      <th style="width: 5%">EDIT</th>
				      <th style="width: 5%">DELETE</th>
				    </tr>
		  		</thead>

		  		<tbody>
				 <% warehouse.forEach(function(warehouse){ %>
				 	<tr>
				      <td><%= warehouse.short %></td>
				      <td><%= warehouse.name %></td>
				      <td><%= warehouse.address %></td>
				      <td><%= warehouse.keeper %></td>
				      <td><%= warehouse.number %></td>
				      <td><a class="edit btn btn-xs btn-success" href="/warehouse/<%= warehouse._id %>/edit"><i class="fa fa-pencil-square" aria-hidden="true"></i></a></td>
				      <td>
					  	<form class="delete" method="POST" action="/warehouse/<%= warehouse._id %>?_method=DELETE">
				              <button class="btn btn-xs btn-danger"><i class="fa fa-minus-square" aria-hidden="true"></i></button>
				        </form>
					  </td>		      
				    </tr>
				<% })  %>

				</tbody>		

		    </table>

	    </div>

<% include ./partials/footer %>